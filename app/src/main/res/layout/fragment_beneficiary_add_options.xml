<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/Mifos.DesignSystem.Spacing.screenHorizontalMargin"
    android:layout_marginVertical="@dimen/Mifos.DesignSystem.Spacing.screenVerticalMargin"
    android:orientation="vertical">

    <TextView
        style="@style/Mifos.DesignSystem.TextStyle.Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_mode" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsMedium"
        android:text="@string/add_beneficiary_option" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsLarge"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_add_beneficiary_manually"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding">

            <ImageView
                android:layout_width="@dimen/Mifos.DesignSystem.Size.BankCardSize"
                android:layout_height="@dimen/Mifos.DesignSystem.Size.BankCardSize"
                app:srcCompat="@drawable/ic_beneficiary_add_48px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
                android:gravity="center"
                android:text="@string/add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_beneficiary_qrcode"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding">

            <ImageView
                android:layout_width="@dimen/Mifos.DesignSystem.Size.BankCardSize"
                android:layout_height="@dimen/Mifos.DesignSystem.Size.BankCardSize"
                app:srcCompat="@drawable/ic_qrcode_scan_gray_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
                android:gravity="center"
                android:text="@string/scan" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/login_margin_top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_upload_beneficiary_qrcode"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/Mifos.DesignSystem.Spacing.CardInnerPadding">

            <ImageView
                android:layout_width="@dimen/Mifos.DesignSystem.Size.BankCardSize"
                android:layout_height="@dimen/Mifos.DesignSystem.Size.BankCardSize"
                app:srcCompat="@drawable/ic_file_upload_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Mifos.DesignSystem.Spacing.marginBetweenItemsSmall"
                android:gravity="center"
                android:text="@string/upload_qr_code" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
